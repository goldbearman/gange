.SliderEditInput {
  width 100%
  background-color pink
  display flex
  align-items center
  position relative


  &__input {
    width 100%
    font-size 24px
    font-weight 400
    line-height 32px
    letter-spacing 0.02em
  }

  &__text {
    position absolute
    z-index 2
    width 100%
    height 32px
    display flex
    align-items center
    background-color white
    font-size 24px
    font-weight 400
    line-height 1
    letter-spacing 0.02em

    span {
      height 32px
      display flex
      align-items center
      align-content center
    }

    &-sufix {
      flex-shrink 0
      font-size 24px
      font-weight 400
      line-height 1
      letter-spacing 0.02em
      align-self flex-end
      min-width 14px
      text-align center
      margin-left 8px

      svg {
        width 14px
        height 17px
        display block
      }
    }

    &-icon {
      margin-left 12px
    }
  }
}