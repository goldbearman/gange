.RangeContainer {
  height: 80px;
  width: 340px;

  text-align left
  padding 10px 10px

  &__title {
    font-size 10px
    color gray
    //text-align left

  }

  &__value {
    width 60px
    display flex

    .iconValue {
      width: 20px;
      padding-top: 5px;
    }

    input {
      width 50px
      border none
      background transparent
      padding 10px 2px
      outline none
    }
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      /* display: none; <- Crashes Chrome on hover */
      -webkit-appearance: none;
      margin: 0; /* <-- Apparently some margin are still there even though it's hidden */
    }
  }

  &__range {

    & input {
      width 100%
    }

    input[type=range] {
      padding 8px 0px
      width: 100%;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
    }

    input[type=range]::-webkit-slider-runnable-track {
      border-radius: 10px / 100%;
      height: 2px;
      border: 1px solid #ff0008;
      //background-color: #fff;
    }

    input[type=range]::-webkit-slider-thumb {
      background: white;
      border: 1px solid #ff0008;
      border-radius: 20px / 100%;
      cursor: pointer;
      width: 20px;
      height: 20px;
      -webkit-appearance: none;
      margin-top: -10px;
      margin-left: -1px;
      margin-right: 5px;
    }

    input[type=range]::-moz-range-track {
      border-radius: 10px / 100%;
      height: 5px;
      border: 1px solid cyan;
      background-color: #fff;
    }

    input[type=range]::-moz-range-thumb {
      background: #ecf0f1;
      border: 1px solid cyan;
      border-radius: 10px / 100%;
      cursor: pointer;
    }
  }

  &__minMaxValues {
    display flex
    justify-content space-between
    font-size 10px
    color gray
    padding 0px 2px
  }
}